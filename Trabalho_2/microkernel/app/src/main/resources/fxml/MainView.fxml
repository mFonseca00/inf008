<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="400.0" minWidth="480.0" prefHeight="600.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    
    <MenuBar fx:id="menuBar">
        <menus>
            <Menu text="Arquivo">
                <items>
                    <MenuItem onAction="#handleExit" text="Sair" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    
    <TabPane fx:id="tabPane" side="BOTTOM" VBox.vgrow="ALWAYS">
        <tabs>
            <Tab closable="false" text="Início">
                <content>
                    <VBox alignment="CENTER" spacing="10">
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Alexandria" />
                        <Label text="Sua própria biblioteca de alexandria" />
                        <Label text="Utilize o menu superior para acessar as funcionalidades disponíveis" />
                        <Label text="Instale plugins para habilitar recursos adicionais" />
                    </VBox>
                </content>
            </Tab>
        </tabs>
    </TabPane>
</VBox>
